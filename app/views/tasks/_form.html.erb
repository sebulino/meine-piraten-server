<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div class="form-errors">
      <h2><%= pluralize(task.errors.count, "Fehler") %> beim Speichern:</h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "Titel" %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Beschreibung" %>
    <%= form.textarea :description %>
  </div>

  <div class="form-group">
    <%= form.label :creator_name, "Erstellt von" %>
    <%= form.text_field :creator_name %>
  </div>

  <div class="form-group">
    <%= form.label :status, "Status" %>
    <%= form.select :status, [["Offen", "open"], ["Übernommen", "claimed"], ["Bearbeitet", "completed"], ["Erledigt", "done"]] %>
  </div>

  <div class="form-group">
    <%= form.label :assignee, "Zugewiesen an" %>
    <%= form.text_field :assignee %>
  </div>

  <div class="form-group">
    <div class="checkbox-row">
      <%= form.checkbox :urgent %>
      <%= form.label :urgent, "Dringend" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :due_date, "Fällig bis" %>
    <%= form.date_field :due_date %>
  </div>

  <div class="form-group">
    <%= form.label :time_needed_in_hours, "Zeitaufwand (Stunden)" %>
    <%= form.number_field :time_needed_in_hours %>
  </div>

  <div class="form-group">
    <%= form.label :activity_points, "Aktivitätspunkte" %>
    <%= form.number_field :activity_points %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, "Kategorie" %>
    <%= form.collection_select(:category_id, Category.all, :id, :name, prompt: "Kategorie wählen") %>
  </div>

  <div class="form-group">
    <%= form.label :entity_id, "Gliederung" %>
    <%= form.collection_select(:entity_id, Entity.all, :id, :name, prompt: "Gliederung wählen") %>
  </div>

  <div class="btn-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
