<p style="color: green"><%= notice %></p>

<% content_for :title, "Aufgaben" %>

<h1>Was gibt es alles zu tun?</h1>

<table>
  <thead>
    <tr>
      <th>Titel</th>
      <th>Status</th>
      <th>Kategorie</th>
      <th>Gliederung</th>
      <th>Zugewiesen an</th>
      <th>Dringend</th>
      <th>Aufwand (Std.)</th>
      <th>Fällig bis</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task %></td>
        <td>
          <% case task.status %>
          <% when "open" %>
            Offen
          <% when "claimed" %>
            Übernommen
          <% when "done" %>
            Erledigt
          <% else %>
            <%= task.status %>
          <% end %>
        </td>
        <td><%= task.category.name if task.category %></td>
        <td><%= task.entity.name if task.entity %></td>
        <td><%= task.assignee %></td>
        <td><%= task.urgent ? "Ja" : "" %></td>
        <td><%= task.time_needed_in_hours %></td>
        <td><%= task.due_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "Neues ToDo", new_task_path %>
<%= link_to "Kategorien", categories_path %>
<%= link_to "Gliederungen", entities_path %>
