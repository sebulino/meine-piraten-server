<% content_for :title, @category.name %>

<div class="card">
  <%= render @category %>
</div>

<div class="btn-group">
  <%= link_to "Bearbeiten", edit_category_path(@category), class: "btn btn-secondary" %>
  <%= link_to "Zurück zur Liste", categories_path, class: "btn btn-secondary" %>
  <%= button_to "Löschen", @category, method: :delete, class: "btn btn-danger btn-sm" %>
</div>
