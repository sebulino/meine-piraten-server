<% content_for :title, "Kategorien" %>

<div class="page-header">
  <h1>Kategorien</h1>
  <%= link_to "Neue Kategorie", new_category_path, class: "btn btn-primary" %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
      </tr>
    <% end %>
  </tbody>
</table>
